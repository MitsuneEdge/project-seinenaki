---
// src/components/DivLine.astro
// 可选的 Props（如果需要动态调整样式）
export interface Props {
  color?: string;
  height?: string;
}

const { color = "var(--div-line-color, #e2e8f0)", height = "5vh" } = Astro.props;
---
<hr
  class="div-line"
  style={`
    width: 100%;
    height: ${height};
    background: ${color};
    border: none;
    margin: 0;
  `}
/>