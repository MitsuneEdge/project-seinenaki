---
// src/components/DivLine.astro
// 可选的 Props（如果需要动态调整样式）
export interface Props {
    color?: string;
    height?: string;
    background?: string;
    spacing?: string;
}

const {
    color = "var(--div-line-color, #e2e8f0)",
    height = "5vh",
    background = "",
    spacing = "8vh",
} = Astro.props;
const finalBackground = background || color;

---

<hr
  class="div-line"
  style={`
    width: 100%;
    height: ${height};
    background: ${finalBackground};
    border: none;
    margin: ${spacing} 0;
  `}
/>

{/*说明：此方式用于在选定模块分界插入一个横跨屏幕的，颜色可选的，高度可调的，间距可控的长分割线*/}
{/*使用格式*/}
{/*  <DivLine height="" background="linear-gradient(to right, #RGB, #RGB)"/>  spacing="5vh"*/}
{/*  <DivLine height="" color="#RGB"/>  */}