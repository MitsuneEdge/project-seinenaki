---
import SidebarLink from './SidebarLink.astro';
import '../styles/musicPlayer.css';
---

<header>
    <nav>
        <div class="internal-links">
            <SidebarLink href="/">主页</SidebarLink>
            <SidebarLink href="/story">剧情</SidebarLink>
            <SidebarLink href="/blog">动态</SidebarLink>
            <SidebarLink href="/about">关于</SidebarLink>
        </div>
        <button id="musicPlayerButton">播放音乐</button>
        <audio id="backgroundMusic"></audio>
    </nav>
</header>
<style>
    header {
        position: fixed;
        left: 0;
        top: 50%;
        transform: translateY(-50%);

        width: 10vw;
        max-width: 90px;
        min-height: 30vh;
        max-height: 300px;

        background: #f8f9fa;
        border-right: 5px solid #666699;
        border-radius: 0 10px 10px 0;
        display: flex;
        flex-direction: column;
        z-index: 1000;

        padding: 15px 0;
        box-sizing: border-box;
        overflow-y: auto; /* 内容过多时滚动 */
    }

    nav {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        gap: 15px;
        height: 100%;
    }

    .internal-links {
        display: flex;
        flex-direction: column;
        gap: 12px;
        width: 100%;
    }

    SidebarLink {
        display: block;
        padding: 8px 15px;
        color: #333;
        text-decoration: none;
        transition: all 0.3s;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    SidebarLink:hover {
        background-color: #e9ecef;
        color: #000;
    }
</style>
<script src="../script/musicPlayerControl.js"></script>